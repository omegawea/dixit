<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tvNotice"
        android:textAlignment="center"
        android:layout_below="@+id/goProDialogImage"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true"
        android:text="Pick a card and tell a story."
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <HorizontalScrollView
        android:id="@+id/hsvHand"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:id="@+id/llHand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            />
    </HorizontalScrollView >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etStory"
        android:textAlignment="center"
        android:hint="What is your story?"
        android:layout_below="@+id/goProDialogImage"
        android:layout_alignParentStart="true"
        android:textAllCaps="false"
        android:layout_alignParentLeft="true" />

    <Button
        android:text="OK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bOK"
        android:layout_below="@+id/etStory"
        android:layout_centerHorizontal="true" />


</LinearLayout>